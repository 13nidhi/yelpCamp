<% include partials/header %>


<div class="container">
	<div class="container">
		<header class="jumbotron">
			<h1> Welcome To YelpCamp!</h1>
			<p>View our hand-picked campground from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href = "/campgrounds/addCamp">Add New Campgrounds</a>
			</p>
		</header>
	</div>
	
	<div class="row text-center " style="display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campground){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail" style="border-radius:10px">
					<img  src = "<%= campground.image %>">
					<h4 ><%= campground.name %><h4>
					<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
				</div>		
			</div>
		<% }); %>
	</div>

</div>

<% include partials/footer %>